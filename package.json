{
  "name": "bbb",
  "version": "1.0.0",
  "description": "Bio Baum Bauer Webapp",
  "type": "module",
  "workspaces": [
    "app/packages/*"
  ],
  "scripts": {
    "dev": "npx sst dev",
    "deploy": "AWS_PROFILE=solawi-prod npx sst deploy --stage production",
    "logs": "npx sst logs --function=BBBCronJobHandler --stage production",
    "aws:login": "aws sso login --profile solawi-prod",
    "test": "echo \"No test specified\"",
    "prepare": "husky"
  },
  "dependencies": {
    "sst": "^3"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22",
    "typescript": "^5",
    "eslint": "^9.17.0",
    "eslint-plugin-n": "^17.15.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9"
  },
  "lint-staged": {
    "app/**/*.{js,ts}": "eslint --fix",
    "app/**/*.{js,ts,md}": "prettier --write"
  }
}
